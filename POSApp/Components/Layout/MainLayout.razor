@inherits LayoutComponentBase
<RadzenLayout>


    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="ali Alshareef 15463316163" />
        </RadzenStack>
    </RadzenHeader>



    <RadzenSidebar Responsive="false" Style="width: max-content">
        
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">

            <RadzenPanelMenuItem Text="Overview" Icon="home" Path="/" />

            <RadzenPanelMenuItem Text="Counter" Icon="local_shipping" Path="/counter" />
            <RadzenPanelMenuItem Text="Weather" Icon="rainy" Path="/weather" />


            <RadzenPanelMenuItem Text="UI Fundamentals" Icon="auto_awesome">
                <RadzenPanelMenuItem Text="Themes" Icon="color_lens" />
                <RadzenPanelMenuItem Text="Colors" Icon="invert_colors" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    
    </RadzenSidebar>
  
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>


    <RadzenFooter>
        Footer
    </RadzenFooter>


</RadzenLayout>
@code{
    bool sidebarExpanded = true;

    void sidBarClic()
    {
        if (sidebarExpanded)
        {
            sidebarExpanded = false;
        }
        else
        {
            sidebarExpanded = true;
        }
    }
}


